<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="sender" class="component.MessageSender" autowire="constructor" />

	<bean id="messageReplacer"  class="component.GetMessageReplacer" scope="singleton"/>
	
	<!-- Provider bean excluded from autowiring -->
	<bean id="hwProvider" class="component.HelloWorldMessageProvider" primary="true">
		<replaced-method name="getMessage" replacer="messageReplacer"/>
	</bean>

	<!-- Provider bean primary for autowiring -->
	<bean id="cwProvider" class="component.CustomMessageProvider" autowire-candidate="false">
		<constructor-arg value="Hello from custom provider (XML configuration)" />

		<!-- Setting property with SpEL -->
		<property name="time" value="#{new java.util.Date()}"></property>
	</bean>
</beans>
